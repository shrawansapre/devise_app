<%= form_for Micropost.new,:html =>{:multipart => true} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>
  <div>
    <%= f.file_field :avatar%>
  </div>
  
  
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
